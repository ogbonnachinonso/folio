<%- include('../partials/header')-%>

<div class="intro intro-single route bg-image" style="background-image: url(assets/img/torii.jpg)">
  <div class="overlay-mf"></div>
  <div class="intro-content display-table">
    <div class="table-cell">
      <div class="container">
        <!-- <h2 class="intro-title mb-4">Portfolio Details</h2> -->
        <h2 class="intro-title mb-4"><span style="color: #ff9f43">Edit</span> <span style="color: #0abde3">Por</span><span style="color: #f5f5f5">tf</span><span style="color: #ff434c">ol<span><span style="color: #ff9f43">io<span></h2>
        
      </div>
    </div>
  </div>
</div>
<main id="paddin">
  <div class="container background" id="container">
    <!-- <h1 class="mb-3 mt-5 py-3 text-center">Edit Portfolio</h1> -->
    <%- include('../partials/message')-%>
   
    <form action="/edit/<%= folio.id %>" method="POST">
     <div class="form-group">
       <label for="category">Category</label>
       <input required type="text" name="category" id="category" class="form-control form-input" value="<%= folio.category %>">
     </div>
      
     <div class="form-group">
      <label for="client">client</label>
      <input required name="client" id="client" class="form-control form-input"><%= folio.client %>
    </div>
    <div class="form-group">
      <label for="url">Url</label>
      <input required name="url" id="url" class="form-control form-input"><%= folio.url %>
    </div>
     <div class="form-group">
       <label for="description">Description</label>
       <textarea name="description" id="description" class="form-control form-input" ><%= folio.description %></textarea>
     </div>
     
     <div class="form-group ">
     <label for="img">Image</label>
     <input required type="text" name="img" id="img" class="form-control form-input mb-5" value="<%= folio.img %>">
   </div>
     <a href="/dashboard" class="btn btn-danger">Cancel</a>
      <button type="submit" class="btn btn-secondary">Save</button>
    </form>
   </div>
   
</main>

