<%- include('../partials/header') -%>
<div class="intro intro-single route bg-image" style="background-image: url(<%= folio.img %>)">
  <div class="overlay-mf"></div>
  <div class="intro-content display-table">
    <div class="table-cell">
      <div class="container">
       
        <h2 class="intro-title mb-4"><span style="color: #ff9f43">Port</span><span style="color: #0abde3">folio</span> <span style="color: #f5f5f5">Det</span><span style="color: #ff9f43">ai<span><span style="color: #ff9f43">ls<span></h2>
        <ol class="breadcrumb d-flex justify-content-center">
          <li class="breadcrumb-item">
            <a href="/">Home</a>
          </li>
          <li class="breadcrumb-item active">Portfolio Details</li>
        </ol>
      </div>
    </div>
  </div>
</div>

<main id="bg">

 
  <section class="portfolio-details">
    <div class="container">

      <div class="portfolio-details-container">

        <div class="owl-carousel portfolio-details-carousel">
          <img src="<%= folio.img %>" class="img-fluid" alt="">
          <img src="<%= folio.img %>" class="img-fluid" alt="">
          <img src="<%= folio.img %>" class="img-fluid" alt="">
        </div>

        <div class="portfolio-info" id="bg">
          <h3>Project information</h3>
          <ul>
            <li><strong>Category</strong>: <%= folio.category %></li>
            <li><strong>Client</strong>: <%= folio.client %></li>
            <li><strong>Project date</strong>: <%= folio.createdAt.toLocaleDateString() %></li>
            <li><strong>Project URL</strong>: <a href="<%= folio.url %>" target="blank">www.portfolio.com</a></li>
          </ul>
        </div>
        
      </div>
      <a href="/portfolio" class="btn btn-secondary mt-3 mb-3">Back to Portfolios</a>
      <div class="portfolio-description">
        <h2>Description of the Project</h2>
        <p>
          <%= folio.description %>
        </p>
      </div>
    </div>
    
  </section> 

</main>
<%- include('../partials/footer') -%>