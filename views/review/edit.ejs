<%- include('../partials/header')-%>
<div class="intro intro-single route bg-image" style="background-image: url(assets/img/torii.jpg)">
  <div class="overlay-mf"></div>
  <div class="intro-content display-table">
    <div class="table-cell">
      <div class="container">
        <!-- <h2 class="intro-title mb-4">Portfolio Details</h2> -->
        <h2 class="intro-title mb-4"><span style="color: #ff9f43">Ed</span> <span style="color: #0abde3">it</span><span style="color: #f5f5f5">Re</span><span style="color: #ff434c">vi<span><span style="color: #ff9f43">ew<span></h2>
        
      </div>
    </div>
  </div>
</div>
<main id="paddin">
  <div class="container background mt-3 py-3" id="container">
    <%- include('../partials/message')-%>
   
    <form action="/edit/<%= review.id %>" method="POST" enctype="multipart/form-data">
     <div class="form-group">
       <label for="name">Name</label>
       <input required type="text" name="name" id="name" class="form-control form-input" value="<%= review.name %>">
     </div>
     <div class="form-group">
     <label for="work">Occupation</label>
     <input type="text" name="work" id="work" class="form-control form-input" value="<%= review.work %>">
   </div>
     <div class="form-group">
       <label for="story">Story</label>
       <textarea name="story" id="story" class="form-control form-input" ><%= review.story %></textarea>
     </div>
     
     <div class="form-group">
      <label for="image">Upload Image</label> 
      <input type="file" id="image" 
             name="image" value="<%= review.imgUrl %>" required> 
    </div> 
     <a href="/reviews" class="btn btn-danger">Cancel</a>
      <button type="submit" class="btn btn-secondary">Save</button>
    </form>
   </div>
   
</main>

<%- include('../partials/footer')-%>


  
